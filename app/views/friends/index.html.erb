<div id="friends">
  <table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th>Owner ID</th>
        <th colspan="3"></th>
      <tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
          <tr>
            <td><%= friend.first_name %></td>
            <td><%= friend.last_name %></td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
            <td><%= friend.user_id %></td>
            <td><%= link_to "Show", friend %></td>
            <td><%= link_to "Edit", edit_friend_path(friend.id) %></td>
            <td><%= button_to "Delete", friend_path(friend.id), method: :delete, class:"btn btn-danger" %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "Add Friend", new_friend_path, class:"btn btn-secondary" %>
